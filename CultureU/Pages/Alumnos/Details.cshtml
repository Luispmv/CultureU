@page
@model CultureU.Pages.Alumnos.DetailsModel

@{
    ViewData["Title"] = "Details";
}
<style>
    main{
        margin-left: 1rem;
    }
    .row{
        width: 90%;
        background: #0d6efd;
        padding: 1rem;
        color: white;
    }
    .table{
        color: white;
    }
</style>
<h1>Details</h1>

<div>
    <h4>Alumno</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Alumno.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Alumno.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Alumno.FirstMidName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Alumno.FirstMidName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Alumno.InscripcionDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Alumno.InscripcionDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Alumno.Inscripciones)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Course Title</th>
                    <th>Grade</th>
                </tr>
                @foreach (var item in Model.Alumno.Inscripciones)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Materia.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Grade)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Alumno?.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
