@page
@model CultureU.Pages.Alumnos.EditModel

@{
    ViewData["Title"] = "Edit";
}
<style>
   main{
    margin-left: 1rem
   }
   .contenedor-formulario{
    background-color: #0d6efd;
    color: white;
    width: 50%;
   }
   form{
    display: flex;
    flex-direction: column;
    gap: 30px;
    padding: 1rem;
   }
   input[type="submit"] {
    background-color: #003B92;
   }
</style>
<h1>Edit</h1>

<h4>Alumno</h4>
<hr />
<div class="row">
    <div class="col-md-4 contenedor-formulario">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Alumno.ID" />
            <div class="form-group">
                <label asp-for="Alumno.LastName" class="control-label"></label>
                <input asp-for="Alumno.LastName" class="form-control" />
                <span asp-validation-for="Alumno.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Alumno.FirstMidName" class="control-label"></label>
                <input asp-for="Alumno.FirstMidName" class="form-control" />
                <span asp-validation-for="Alumno.FirstMidName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Alumno.InscripcionDate" class="control-label"></label>
                <input asp-for="Alumno.InscripcionDate" class="form-control" />
                <span asp-validation-for="Alumno.InscripcionDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
