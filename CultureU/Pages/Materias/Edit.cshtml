@page
@model CultureU.Pages.Materias.EditModel

@{
    ViewData["Title"] = "Edit";
}
<style>
   main{
    margin-left: 1rem
   }
   .contenedor-formulario{
    background-color: #0d6efd;
    color: white;
    width: 50%;
   }
   form{
    display: flex;
    flex-direction: column;
    gap: 30px;
    padding: 1rem;
   }
   input[type="submit"] {
    background-color: #003B92;
   }
</style>
<h1>Edit</h1>

<h4>Materia</h4>
<hr />
<div class="row">
    <div class="col-md-4 contenedor-formulario">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Materia.MateriaID" />
            <div class="form-group">
                <label asp-for="Materia.Title" class="control-label"></label>
                <input asp-for="Materia.Title" class="form-control" />
                <span asp-validation-for="Materia.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Materia.Credits" class="control-label"></label>
                <input asp-for="Materia.Credits" class="form-control" />
                <span asp-validation-for="Materia.Credits" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Materia.EscuelaID" class="control-label"></label>
                <select asp-for="Materia.EscuelaID" class="form-control" asp-items="ViewBag.EscuelaID"></select>
                <span asp-validation-for="Materia.EscuelaID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
