@page "{id:int}"
@model CultureU.Pages.Escuelas.DeleteModel

@{
    ViewData["Title"] = "Delete";
}
<style>
    main{
        margin-left: 1rem;
    }
    div{
        width: 90%;
        background: #0d6efd;
        padding: 1rem;
        color: white;
    }
    .table{
        color: white;
    }
</style>
<h1>Delete</h1>
<p class="text-danger">@Model.ConcurrencyErrorMessage</p>


<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Escuela</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Escuela.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Escuela.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Escuela.Budget)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Escuela.Budget)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Escuela.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Escuela.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Escuela.ConcurrencyToken)
        </dt>
        <dd class="col-sm-10">
            @Utility.GetLastChars(Model.Escuela.ConcurrencyToken)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Escuela.Profesor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Escuela.Profesor.FullName)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Escuela.EscuelaID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
